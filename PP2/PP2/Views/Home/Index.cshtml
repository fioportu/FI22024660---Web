@model BinarioCalculator.Models.BinarioModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Calculadora Binaria</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="post">
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                        {<div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>}

                        <div class="mb-3">
                            <label asp-for="A" class="form-label fw-bold"></label>
                            <input asp-for="A" class="form-control" placeholder="Ingrese binario (ej. 1010)" />
                            <span asp-validation-for="A" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="B" class="form-label fw-bold"></label>
                            <input asp-for="B" class="form-control" placeholder="Ingrese binario (ej. 11)" />
                            <span asp-validation-for="B" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Calcular</button>
                    </form>
                </div>
            </div>

            @if (Model.And != null)
            {
                <div class="card shadow-sm border-0 mt-4">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">Resultados</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered align-middle text-center">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Operación</th>
                                        <th>Bin</th>
                                        <th>Oct</th>
                                        <th>Dec</th>
                                        <th>Hex</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>a</td>
                                        <td><code>@Model.A.PadLeft(8,'0')</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.A,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.A,2)</td>
                                        <td>@Convert.ToInt32(Model.A,2).ToString("X")</td>
                                    </tr>
                                    <tr>
                                        <td>b</td>
                                        <td><code>@Model.B.PadLeft(8,'0')</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.B,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.B,2)</td>
                                        <td>@Convert.ToInt32(Model.B,2).ToString("X")</td>
                                    </tr>
                                    <tr>
                                        <td>a AND b</td>
                                        <td><code>@Model.And</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.And,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.And,2)</td>
                                        <td>@Convert.ToInt32(Model.And,2).ToString("X")</td>
                                    </tr>
                                    <tr>
                                        <td>a OR b</td>
                                        <td><code>@Model.Or</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.Or,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.Or,2)</td>
                                        <td>@Convert.ToInt32(Model.Or,2).ToString("X")</td>
                                    </tr>
                                    <tr>
                                        <td>a XOR b</td>
                                        <td><code>@Model.Xor</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.Xor,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.Xor,2)</td>
                                        <td>@Convert.ToInt32(Model.Xor,2).ToString("X")</td>
                                    </tr>
                                    <tr>
                                        <td>a + b</td>
                                        <td><code>@Model.Sum</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.Sum,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.Sum,2)</td>
                                        <td>@Convert.ToInt32(Model.Sum,2).ToString("X")</td>
                                    </tr>
                                    <tr>
                                        <td>a • b</td>
                                        <td><code>@Model.Mul</code></td>
                                        <td>@Convert.ToString(Convert.ToInt32(Model.Mul,2), 8)</td>
                                        <td>@Convert.ToInt32(Model.Mul,2)</td>
                                        <td>@Convert.ToInt32(Model.Mul,2).ToString("X")</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
